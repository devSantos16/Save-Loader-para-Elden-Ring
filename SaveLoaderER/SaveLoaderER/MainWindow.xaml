<Window x:Class="SaveLoaderER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveLoaderER"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/background.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Grid Margin="0,0,0,334">
                <Rectangle Height="100" Fill="#E5000000" Margin="0,0,1,0"/>
                <Button Margin="0,0,700,0" BorderBrush="{x:Null}" Foreground="#FFC4C4C4"  VerticalContentAlignment="Bottom" Click="Selecionar_Arquivo_Click" Content="Adicionar Arquivo">
                    <Button.Background>
                        <ImageBrush ImageSource="/pasta.png" Stretch="Uniform"/>
                    </Button.Background>
                    
                </Button>
            </Grid>
        </StackPanel>
        <ScrollViewer Margin="0,100,0,0">
            <StackPanel Name="Painel"></StackPanel>
        </ScrollViewer>


    </Grid>

</Window>
